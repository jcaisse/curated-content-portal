# Database Configuration
# For local development (SQLite)
DATABASE_URL="postgresql://curated_user:secure_password_123@localhost:5432/curated_content_portal"

# For production (PostgreSQL with pgvector)
# DATABASE_URL="postgresql://username:password@localhost:5432/curated_content_portal"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-key-here"

# OpenAI API Configuration
OPENAI_API_KEY="your-openai-api-key-here"
OPENAI_MODEL="gpt-4o-mini"

# Content Sources Configuration
RSS_FEED_URLS="https://example.com/feed1.xml,https://example.com/feed2.xml"
WEB_CRAWL_ENABLED="true"
CRAWL_INTERVAL_HOURS="24"

# File Storage Configuration
# For production - AWS S3 or similar
# AWS_ACCESS_KEY_ID="your-aws-access-key"
# AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
# AWS_REGION="us-east-1"
# AWS_S3_BUCKET="your-content-bucket"

# For local development - use URL-only strategy
FILE_STORAGE_STRATEGY="url_only"

# Admin Configuration
ADMIN_EMAIL="admin@example.com"
ADMIN_PASSWORD="admin123"

# Content Curation Configuration
MAX_CRAWL_ITEMS_PER_RUN="100"
CONTENT_REVIEW_THRESHOLD="0.7"
AUTO_PUBLISH_ENABLED="false"

# API Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE="60"
RATE_LIMIT_BURST="10"

# Monitoring & Analytics
ANALYTICS_ENABLED="false"
# GOOGLE_ANALYTICS_ID="your-ga-id"

# Security Configuration
BCRYPT_ROUNDS="12"
SESSION_MAX_AGE="86400"

# Development Configuration
NODE_ENV="development"
LOG_LEVEL="info"

# Docker Configuration (for production)
# POSTGRES_USER="curated_user"
# POSTGRES_PASSWORD="your-secure-password"
# POSTGRES_DB="curated_content_portal"
# POSTGRES_HOST="postgres"
# POSTGRES_PORT="5432"

# Redis Configuration (for caching - optional)
# REDIS_URL="redis://localhost:6379"

# PostgreSQL Configuration
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="postgres"
POSTGRES_DB="curated_content_portal"
POSTGRES_PORT="5432"
APP_PORT="3000"
