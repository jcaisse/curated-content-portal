# Production Environment Configuration
# Copy this to .env.prod and update with your production values

# Database
DATABASE_URL="postgresql://postgres:your-secure-password@db:5432/curated_content"
POSTGRES_DB="curated_content"
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="your-secure-password"

# NextAuth
NEXTAUTH_URL="https://yourdomain.com"
NEXTAUTH_SECRET="your-very-secure-secret-key-here"

# AI
OPENAI_API_KEY="sk-your-openai-api-key"

# Admin
ADMIN_INGEST_KEY="your-secure-admin-key"

# Deployment
DOMAIN="yourdomain.com"
EMAIL="admin@yourdomain.com"
PORT=3000

# Optional: Caddy/Proxy
CADDY_EMAIL="admin@yourdomain.com"
