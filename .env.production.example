# Production Environment Configuration
# Copy this file to .env.production and fill in the values
# DO NOT COMMIT .env.production - it contains secrets

# Database Configuration
DATABASE_URL="postgresql://postgres:<POSTGRES_PASSWORD>@db:5432/curated_content_portal?schema=public"
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="<GENERATE_STRONG_PASSWORD>"
POSTGRES_DB="curated_content_portal"
POSTGRES_PORT="5432"

# App Configuration
APP_PORT="3000"
NODE_ENV="production"

# NextAuth Configuration
NEXTAUTH_URL="https://yourdomain.com"
NEXTAUTH_SECRET="<GENERATE_32_BYTE_BASE64_SECRET>"

# OpenAI API Configuration
OPENAI_API_KEY="<YOUR_OPENAI_API_KEY>"
OPENAI_MODEL="gpt-4o-mini"

# Admin Configuration
ADMIN_EMAIL="admin@yourdomain.com"
ADMIN_PASSWORD="<GENERATE_STRONG_PASSWORD>"
# ADMIN_INITIAL_PASSWORD="<ONE_TIME_PASSWORD_FOR_ADMIN_CREATION>"

# Domain and Email
DOMAIN="yourdomain.com"
EMAIL="admin@yourdomain.com"

# AI Configuration
AI_DISABLED="false"

# Admin Ingest Key
ADMIN_INGEST_KEY="<GENERATE_32_CHAR_SECRET>"

# Content Sources Configuration
RSS_FEED_URLS="https://example.com/feed1.xml,https://example.com/feed2.xml"
WEB_CRAWL_ENABLED="true"
CRAWL_INTERVAL_HOURS="24"

# File Storage Configuration
FILE_STORAGE_STRATEGY="s3"

# Content Curation Configuration
MAX_CRAWL_ITEMS_PER_RUN="100"
CONTENT_REVIEW_THRESHOLD="0.7"
AUTO_PUBLISH_ENABLED="false"

# API Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE="60"
RATE_LIMIT_BURST="10"

# Monitoring & Analytics
ANALYTICS_ENABLED="true"
GOOGLE_ANALYTICS_ID="<YOUR_GA_ID>"

# Security Configuration
BCRYPT_ROUNDS="12"
SESSION_MAX_AGE="86400"

# Logging
LOG_LEVEL="warn"

# Redis Configuration (for caching - optional)
REDIS_URL="redis://redis:6379"

# AWS Configuration (if using S3)
AWS_ACCESS_KEY_ID="<YOUR_AWS_ACCESS_KEY>"
AWS_SECRET_ACCESS_KEY="<YOUR_AWS_SECRET_KEY>"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="<YOUR_S3_BUCKET>"
